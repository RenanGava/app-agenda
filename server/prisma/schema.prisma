// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Permissions {
  SUPER_ADMIN
  ADMIN
  USER
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String?
  createdAt DateTime @default(now())

  //Relaçãoes do bando de dados
  refresh_token Refresh_Token?
  permission    Permissions
  clients       Client[]

  @@map("user")
}

model Client {
  id           String   @id @default(uuid())
  name         String
  value        String
  service      String
  cellPhone    String
  createdAt    DateTime @default(now())
  reservedTime String

  //Relaçãoes do bando de dados
  user   User?   @relation(fields: [userId], references: [id])
  userId String?

  @@map("client")
}

model Refresh_Token {
  id        String @id @default(uuid())
  expiresIn Int

  //Relaçãoes do bando de dados
  user User @relation(fields: [userId], references: [id])
  userId String @unique


  @@map("refresh_token")
}
